{
  "name": "mml-lang-support",
  "displayName": "MML Language Support",
  "description": "Support for Minimal Markup Language (MML) - syntax highlighting, snippets, and validation",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "contributes": {
    "languages": [
      {
        "id": "mml",
        "aliases": ["MML", "Minimal Markup Language"],
        "extensions": [".mml", ".mmlc"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mml",
        "scopeName": "source.mml",
        "path": "./syntaxes/mml.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "mml",
        "path": "./snippets/mml.json"
      }
    ],
    "commands": [
      {
        "command": "mml.validate",
        "title": "Validate MML Document",
        "category": "MML"
      },
      {
        "command": "mml.convertToHtml",
        "title": "Convert to HTML",
        "category": "MML"
      },
      {
        "command": "mml.compress",
        "title": "Compress to MMLC",
        "category": "MML"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "mml.validate",
          "when": "resourceExtname =~ /\\.(mml|mmlc)$/"
        },
        {
          "command": "mml.convertToHtml",
          "when": "resourceExtname =~ /\\.(mml|mmlc)$/"
        },
        {
          "command": "mml.compress",
          "when": "resourceExtname == .mml"
        }
      ]
    }
  },
  "activationEvents": [
    "onLanguage:mml"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.2.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mml-lang/vscode-mml.git"
  },
  "publisher": "mml-lang",
  "license": "MIT"
}
